@model PopupViewModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div id="_PopupView" style="display: block;background: #b1acac;">
    <div class="modal in" id="ajaxModal" style="display: block;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body" style="text-align:center;">
                    <label style="font-size:16px;font-weight:normal;"> @Model.Message</label>

                </div>
                <div class="modal-footer" style="border-top:none">
                    <a class="btn btn-blue" id="redirect" href="https://account.activedirectory.windowsazure.com/ChangePassword.aspx" target="_blank">
                        <i class="fa fa-pencil-square-o f-16" aria-hidden="true"></i>  Change Password
                    </a>
                    @if (Context.Session.GetString("ExpireInDays") != "true")
                    {
                        <a id="closenewPopupNotificationView" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times-circle"></i> Close</a>
                    }

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
    <div class="modal-backdrop in" style="opacity:0.7;"></div>
</div>

<script type="text/javascript">

    setTimeout(function () {
        $("#_PopupccView").hide();
    }, 10000);

</script>