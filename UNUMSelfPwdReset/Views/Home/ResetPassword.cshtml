@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ResetPasswordRequest


<div class="page-header">
    <h1 class="page-title">Reset Password</h1>
    <div>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Home"><i class="fa fa-tachometer f-16" aria-hidden="true"></i> Dashboard</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index" asp-controller="Home"><i class="fa fa-user f-16"></i> My Accounts</a></li>
            <li class="breadcrumb-item active" aria-current="page"><i class="fa fa-pencil-square-o f-16" aria-hidden="true"></i> Reset Password</li>
        </ol>
    </div>
</div>
<div class="col-md-6">

    <form asp-controller="Home" asp-action="ResetPassword">
        @Html.AntiForgeryToken()
        <input asp-for="Id" type="hidden" />
        <input asp-for="Username" type="hidden" />

        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" type="password" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="fa fa-check" aria-hidden="true" style="font-size: 15px;"></i> Confirm</button>
            <a type="button" class="btn btn-danger" asp-action="Index" asp-controller="Home"><i class="fa fa-times" aria-hidden="true" style="font-size: 15px;"></i> Cancel</a>
        </div>
    </form>
</div>
@section scripts{
    <script type="text/javascript">
    $(document).ready(function () {
            $("#global-loader").hide();
            if (performance.navigation.type == 2) {
                //alert("Back button clicked");
            }
        });

    </script>
}