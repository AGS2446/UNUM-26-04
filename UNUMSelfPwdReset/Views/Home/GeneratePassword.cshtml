@section scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type="text/javascript">
        // $(document).on('click', '.copyval', function () {
        $('#copytextnewxxxxxx').click(function () {
            // Get the text field
            var copyText = $(".copyTemp").val();
            // Select the text field
            var $temp = $("< input >");
            $("body").append($temp);
            $temp.val($("#TempPassword").val()).select();
            document.execCommand("copy");
            $temp.remove();

        });
        $(document).ready(function () {
            $('a').tooltip({

                disabled: true
            });
        });

        function copyToClipboard(text) {

            var textArea = document.createElement("textarea");
            textArea.value = text;
            document.body.appendChild(textArea);
            textArea.select();

            try {
                var successful = document.execCommand('copy');
                var msg = successful ? 'successful' : 'unsuccessful';
                console.log('Copying text command was ' + msg);
            } catch (err) {
                console.log('Oops, unable to copy', err);
            }
            document.body.removeChild(textArea);
        }
        $('#copytextnew').click(function () {

            var clipboardText = "";
            clipboardText = $('.copyTemp').val();
            copyToClipboard(clipboardText);

            $(".t-t").removeClass("h-b");
            setTimeout(function () {
                $(".t-t").addClass("h-b");
                $("a").attr("title", "Click to copy");
            }, 2000);

        });
        $(document).on('click', '#change', function (e) {
            $("#global-loader").hide();
        });

    </script>
}